<div class="container" id="novedadesDiv">

    {{!Fila 1}}
    <div class="row divNovedades">
        <p class="col-md-3" style="font-size: 25px;">Bienvenido {{persona}}!</p>
        <a class="col-md-2" href="/admin/login/logout" style="background-color: rgb(255, 229, 229); height: 40px; width: 150px">Cerrar sesion 🔒</a>
    </div>
    {{!Fila 2}}
    <div class="row">
        <div class="col-7">
            <h3>Listado de novedades</h3>
        </div>
        <div class="col-5">
            <a style="font-size: 20px; background-color: rgb(206, 255, 206)" href="/admin/novedades/agregar">  Agregar Nueva Novedad ➕</a>
        </div>
    </div>
    {{!Fila 3}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">titulo</th>
                        <th scope="col">Img</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{{imagen}}}</td>
                        <td>
                            <a href="/admin/novedades/modificar/{{id}}" style="background-color: rgb(211, 211, 255);">Modificar ✏️</a>
                            <a href="/admin/novedades/eliminar/{{id}}" style="background-color: rgb(255, 156, 156);" >Eliminar ❌ </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

        </div>
    </div>
</div>