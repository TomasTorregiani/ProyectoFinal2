<div class="container">
    <p>Ingrese usuario y contraseña</p>
    <div class="row">
        <form action="/admin/login" method="post">
            <div class="row">
                <div class="col-sm-10">
                    <input type="text"
                        id="inputUser"
                        placeholder="Usuario"
                        name="usuario">
                </div>
            </div>
            <div class="row">
                <div class="col-sm-10">
                    <input type="text"
                        id="inputPassword"
                        placeholder="contraseña"
                        name="password">
                </div>
            </div>
            <button type="submit">Ingresar</button>
        </form>
        {{#if error}}
            <p>Error y/o contraseña incorrecto</p>
        {{/if}}
    </div>
</div>